#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int var=20;
    int *p;
    p=&var;
    cout << "Value of var variable: ";
    cout<< var<< endl;
    
    cout<<"Address stored in p variable: ";
    cout<< p <<endl;
    
    cout << "Value of p variable: ";
    cout << *p << endl;

    return 0;
}
