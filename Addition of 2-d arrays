#include <iostream>
using namespace std;
int main() {
    int arr1[2][2],arr2[2][2],count,i,j;
    cout<<"Enter the element of the array 1: "<<endl;
    for (int i = 0; i < 2; i++) { 
        for (int j = 0; j < 2; j++) { 
            cin>>arr1[i][j];
        }
    }
    cout<<"Enter the element of the array 2: "<<endl;
    for (int i = 0; i < 2; i++) { 
        for (int j = 0; j < 2; j++) { 
            cin>>arr2[i][j];
        }
    }
    for (int i = 0; i < 2; i++) { 
        for (int j = 0; j < 2; j++) { 
            arr1[i][j]+= arr2[i][j];
            cout<<arr1[i][j];
            cout<<" ";
        }
        cout<<endl;
    }
    
    return 0;
}
